pipeline {

  agent none

  environment {
    DOCKER_IMAGE = "hieubossgr/jenkins-docker"
  }

  stages {
    stage("Test") {
      agent { label 'master'}
      steps {
	sh "echo 'Hello world'"
      }
    }

    stage("Build PHP") {
      agent {
        docker {
          image 'allebb/phptestrunner-73:latest'
          args '-u root:sudo'
        }
      }
      steps {
        echo 'Running PHP 7.3 tests...'
        sh 'php -v'
        echo 'Installing Composer'
        sh 'curl -sS https://getcomposer.org/installer | php '
        echo 'movie composer.phar to /usr/local/bin/composer'
        sh 'mv composer.phar /usr/local/bin/composer'
	echo 'Install phpunit'
	sh 'cd cd $WORKSPACE && composer require --dev phpunit/phpunit'
        echo 'Running PHPUnit tests...'
        sh 'php $WORKSPACE/vendor/bin/phpunit automation-test/tests'
      }
    }
  }

  post {
    success {
      echo "SUCCESSFUL"
    }
    failure {
      echo "FAILED"
    }
  }
}
